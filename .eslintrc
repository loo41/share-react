{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "linebreak-style" : ["error", "windows"],
        "indent": ["error", 4],
        "semi": [0]
    },
    "env": {
        "es6": true,
        "amd": true
    },
    "plugins": [
        "react"
    ]
}